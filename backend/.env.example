# Server Configuration
NODE_ENV=development
PORT=3001

# Whisper ASR Service
WHISPER_API_URL=http://localhost:9000

# Cleanup Provider Configuration
# Options: 'gemini' or 'openrouter'
CLEANUP_PROVIDER=gemini

# Gemini API Configuration (required if CLEANUP_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenRouter API Configuration (required if CLEANUP_PROVIDER=openrouter)
# Get your API key at https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Examples: anthropic/claude-3.5-sonnet, google/gemini-pro-1.5, openai/gpt-4-turbo
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
